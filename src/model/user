const mongoose = require("mongoose");
const  validator = require('validator');



const userSchema = mongoose.Schema ({
     firstName: {
        type: String,
        required : true,
        minLength:2,
        maxLength:8
    },

    lastName: {
        type: String,
        minLength:2,
        maxLength:8
    },
   email:{
        type:String,
        required : true,
        unique : true,
        trim :true,
        lowercase: true,
        validate(value){
            if(!validator.isEmail(value)){
                throw new Error("Email you enter is incorrect " + value);
        }
    },

    },

    about:{
        type:String,
        default: "This is the description for me "
    },

    age:{
        type: Number,
        min:16
    },

    photo:{
        type: String,
        default:"https://www.pinterest.com/pin/default-pfp--810436895442077324/",
        validate(value){
            if(!validator.isURL(value)){
                throw new Error("Photo  URL is incorrect " + value);
        }
        }
    },
    gender: {
        type: String,
        required :true,
        enum:["male" , "female" , "other"]
    },
    password: {
        type: String,
        required :true,
        validate(value){
            if(!validator.isStrongPassword(value)){
                throw new Error("Your password is not Strong. Enter a strong password  " + value);
        }
        }
        
    },


    skill:{
        type:  [""],
        required : true
    } ,
},
    {
        timestamps: true,
    }

)


const User = mongoose.model('User', userSchema);
module.exports = User;
